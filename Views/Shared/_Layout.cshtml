@{
    ViewBag.Title = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>Registar pacijenata obolelih od plucne hipertenzije</title>
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="container">  
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand">Registar pacijenata obolelih od plucne hipertenzije</h1>
            <div>
                <ul class="navbar-nav">
                    @*<li class="nav-item">
            <a class="nav-link" asp-controller="App" asp-action="About">O</a>
        </li>*@
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Index">Pocetna</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="App" asp-action="UserApp">Korisnici</a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="App" asp-action="Institution">Institucije</a>
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("User") || User.IsInRole("Manager"))
                    {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Patient" asp-action="Patient">Pacijenti</a>
                    </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Contact">Kontakt</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout @User.Identity.Name</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <section class="container">
        @RenderBody()
    </section>
    <footer class="container">
        <div class="text-center">Copyright 2020 Potic Consulting Srbija</div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("scripts", false)
</body>
</html>